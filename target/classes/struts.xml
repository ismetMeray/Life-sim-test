<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>


	<constant name="struts.devMode" value="true" />

	<package name="pasimo" namespace="/" extends="struts-default">
		<!-- strict-method-invocation="true"> -->

		<interceptors>
			<interceptor name="LoginInterceptor"
				class="project.hospital.controller.security.LoginInterceptor"></interceptor>
			<interceptor-stack name="LoginStack">
				<interceptor-ref name="LoginInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>


		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="showLogin">
			<interceptor-ref name="LoginStack"></interceptor-ref>
			<result>/view/security/login.jsp</result>
			<result name="login">/view/security/login.jsp</result>
		</action>

	</package>

</struts>  